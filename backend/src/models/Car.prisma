model Car {
    car_id          String @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
    brandss_id      String @db.Uuid
    model           String
    price_per_day   Int
    seats_available Int
    photo           String
    production_year Int
    car_description String

    // Powiązanie z tabelą Brand
    brand          Brand           @relation(fields: [brandss_id], references: [brand_id], onUpdate: Cascade, onDelete: Cascade)
    // Powiązania z tabelami CarsLocations i Reservations
    cars_locations CarsLocations[]
    reservations   Reservation[]

    @@map("cars")
}
